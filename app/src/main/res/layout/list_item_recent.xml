<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/pending_card_view"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/dashboard_card_corner_radius"
        card_view:cardElevation="@dimen/dashboard_card_elevation"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            style="@style/vertical_linear_layout">
            <LinearLayout
                android:padding="@dimen/margin_10dp"
                android:background="@color/logo_green"
                style="@style/vertical_linear_layout">

                <TextView
                    android:id="@+id/title"
                    android:text="Request#1 Video Consultation"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:weightSum="2"
                    style="@style/horizontal_linear_layout">
                    <TextView
                        android:id="@+id/subtitle"
                        android:text="Request#"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_18sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/date"
                        android:text="18 April 2018"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_18sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:padding="@dimen/margin_10dp"
                android:text="Video consulation request with doctor batra scheduled on 10th May 2018 at 10 am is pending"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/pay_now"
                android:textAllCaps="false"
                android:text="@string/action_pay_now"
                android:textSize="@dimen/text_16sp"
                android:layout_margin="@dimen/margin_10dp"
                android:padding="@dimen/margin_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
