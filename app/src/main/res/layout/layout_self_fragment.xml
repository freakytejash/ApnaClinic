<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
    <EditText
            android:id="@+id/et_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/search_background"
            android:singleLine="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:hint="@string/enter_email"
            android:paddingLeft="20dp"
            android:paddingRight="16dp"
            android:imeOptions="actionNext"
            android:textColor="@color/gray"
            android:layout_width="0dp"
            android:inputType="textEmailAddress"
            android:layout_height="50dp"
            android:enabled="false"/>

    <EditText
            android:id="@+id/et_phone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_email"
            android:background="@drawable/search_background"
            android:singleLine="true"
            android:hint="@string/enter_phone"
            android:paddingLeft="20dp"
            android:paddingRight="16dp"
            android:layout_margin="15dp"
            android:imeOptions="actionNext"
            android:textColor="@color/gray"
            android:layout_width="0dp"
            android:maxLength="10"
            android:inputType="phone"
            android:layout_height="50dp"
            android:enabled="false"/>

    <in.co.akgroups.apnaClinic.custom.CustomTextView
            android:id="@+id/tv_editEmail"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="@id/et_email"
            app:layout_constraintTop_toTopOf="@id/et_email"
            app:layout_constraintBottom_toBottomOf="@id/et_email"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            app:type_face="@string/font_black"
            android:layout_marginRight="@dimen/margin_10dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/edit"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/margin_10dp"/>

    <in.co.akgroups.apnaClinic.custom.CustomTextView
            android:id="@+id/tv_editPhone"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="@id/et_phone"
            app:layout_constraintTop_toTopOf="@id/et_phone"
            app:layout_constraintBottom_toBottomOf="@id/et_phone"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            app:type_face="@string/font_black"
            android:layout_marginRight="@dimen/margin_10dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/edit"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/margin_10dp"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_gender"
            android:layout_width="0dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_phone"
            android:background="@drawable/search_background">

        <in.co.akgroups.apnaClinic.custom.CustomTextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                app:type_face="@string/font_black"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/gender"/>

        <RadioGroup
                android:id="@+id/radioGrpGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_gender"
                android:checkedButton="@+id/radioMale"
                android:orientation="horizontal"
                android:weightSum="1">
            <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:paddingLeft="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_height="wrap_content"
                    android:text="@string/male"/>
            <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:paddingLeft="10dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_height="wrap_content"
                    android:text="@string/female"/>
        </RadioGroup>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_date"
            android:layout_width="0dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_gender"
            android:background="@drawable/search_background">

        <in.co.akgroups.apnaClinic.custom.CustomTextView
                android:id="@+id/tv_dob"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                app:type_face="@string/font_black"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/dob"/>

        <EditText
                android:id="@+id/et_date_of_birth"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dob"
                android:singleLine="true"
                android:hint="@string/enter_dob"
                android:imeOptions="actionNext"
                android:textColor="@color/gray"
                android:layout_width="0dp"
                android:inputType="none"
                android:layout_height="50dp"
                android:focusable="false"/>
    </android.support.constraint.ConstraintLayout>


