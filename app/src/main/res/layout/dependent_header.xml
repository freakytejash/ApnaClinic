<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <in.co.akgroups.apnaClinic.custom.CustomTextView
            android:id="@+id/dependent_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Name"
            app:type_face="@string/font_heavy"/>

    <ImageView
            android:id="@+id/list_item_genre_arrow"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/dependent_title"
            app:layout_constraintBottom_toBottomOf="@id/dependent_title"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/ic_arrow_down" />
</android.support.constraint.ConstraintLayout>